                                <TableRow FontSize="25"
                                          FontWeight="DemiBold">
                                    <TableCell>
                                        <Paragraph>Сумма по частным домам</Paragraph>
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph>Сумма по квартирам</Paragraph>
                                    </TableCell>
                                </TableRow>
                                <TableRow>
                                    <TableCell>
                                        <Paragraph>
                                            <Run Text="{Binding BuildingSumm}"
                                                 FontFamily="Times New Roman"/>
                                            <Run Text="руб."/>
                                        </Paragraph>
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph>
                                            <Run Text="{Binding ApartmentSumm}"
                                                 FontFamily="Times New Roman"/>
                                            <Run Text="руб."/>
                                        </Paragraph>
                                    </TableCell>
                                </TableRow>
                            </TableRowGroup>
                        </Table>
                        <Paragraph FontSize="25"
                                   TextAlignment="Right"
                                   FontWeight="Black">
                            <Run Text="ИТОГО: "/>
