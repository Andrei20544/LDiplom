<Page x:Class="DipWACH.View.Pages.SubscribePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DipWACH.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="835" 
      d:DesignWidth="1390"
      Title="SubscribePage">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="58"/>
            <RowDefinition/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Абоненты"
                   FontWeight="Black"
                   HorizontalAlignment="Center"
                   FontSize="30"/>

        <!--Header-->
        <Grid VerticalAlignment="Center"
              Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid HorizontalAlignment="Center">
              
                <!--<TextBox Style="{StaticResource MainTextBox}"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Width="350"
                         Name="SearchBox"/>-->
                <ComboBox Width="350"
                          Height="50"
                          Name="ComboSearch"
                          VerticalContentAlignment="Center"
                          ItemsSource="{Binding FilterBoxSource}"
                          SelectedItem="{Binding SelectFilterBox}"
                          Foreground="Black"/>
                <TextBlock Style="{StaticResource UnderBoxTextBlockSearch}"
                           Text="Фильтр"/>

            </Grid>

            <Grid Grid.Column="1">
                
                
                
            </Grid>

        </Grid>

        <!--Content-->
        <Grid Grid.Row="2"
              Margin="10">

            <ListBox Background="Transparent"
                     ItemsSource="{Binding collectionView}"
                     Name="MainItems"
                     VerticalAlignment="Top"
                     HorizontalAlignment="Center"
                     SelectedItem="{Binding SelectedRegion, UpdateSourceTrigger=PropertyChanged}">

                <!--<ListBox.Template>
                    <ControlTemplate>
                        <ScrollViewer x:Name="main">
                            <ItemsPresenter/>
                        </ScrollViewer>
                </ListBox.Template>-->

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Width="900"
                              Height="180"
                              Margin="0">

                            <Border CornerRadius="8"
                                    Background="AliceBlue">

                                <Grid>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="80"/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.ColumnSpan="2">

                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Text="{Binding Region}"
                                               FontSize="25"
                                               Style="{StaticResource TitlePageTextBlock}"/>
                                        <TextBlock Text="{Binding Settlements}"
                                               Style="{StaticResource TitlePageTextBlock}"
                                               Grid.Row="1"/>

                                    </Grid>

                                    <Border Grid.Row="1"
                                            Style="{StaticResource PageBorder}">

                                        <StackPanel VerticalAlignment="Center">

                                            <StackPanel Orientation="Horizontal"
                                                        Style="{StaticResource PageStackPanel}">
                                                <TextBlock Text="Кол-во частных домов: "
                                                           Style="{StaticResource PageTextBlock}"/>

                                            </StackPanel>

                                            <StackPanel Orientation="Horizontal"
                                                        Style="{StaticResource PageStackPanel}">
                                                <TextBlock Text="Общее кол-во домов: "
                                                           Style="{StaticResource PageTextBlock}"/>

                                            </StackPanel>

                                            <StackPanel Orientation="Horizontal"
                                                        Style="{StaticResource PageStackPanel}">
                                                <TextBlock Text="Общее кол-во квартир: "
                                                           Style="{StaticResource PageTextBlock}"/>

                                            </StackPanel>

                                        </StackPanel>

                                    </Border>

                                    <Border Grid.Row="1"
                                            Grid.Column="1"
                                            Style="{StaticResource PageBorder}">

                                        <StackPanel VerticalAlignment="Center"
                                                    Margin="10 0 0 0">

                                            <TextBlock Text="{Binding QtyPrivateBuilding}"
                                                       Style="{StaticResource DefaultPageTextBlock}"/>
                                            <TextBlock Text="{Binding QtyBuilding}"
                                                       Style="{StaticResource DefaultPageTextBlock}"/>
                                            <TextBlock Text="{Binding QtyApartment}"
                                                       Style="{StaticResource DefaultPageTextBlock}"/>

                                        </StackPanel>

                                    </Border>

                                </Grid>

                            </Border>

                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>

                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="1"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>

            </ListBox>

        </Grid>

        <!--Footer-->
        <Grid Grid.Row="3">

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0 0 25 0">

                <Button Width="190"
                        Height="40"
                        Margin="0 0 15 0"
                        Command="{Binding AutoCalculate}">
                    <TextBlock Text="Авторасчет"/>
                </Button>
                <Button Width="190"
                        Height="40"
                        Command="{Binding Calculate}">
                    <TextBlock Text="Расчет"/>
                </Button>
                
            </StackPanel>
            
        </Grid>

        <Grid Grid.RowSpan="4"
              Background="#99272727"
              Visibility="{Binding DocVisible}">

            <Grid VerticalAlignment="Center"
                  HorizontalAlignment="Center">

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>

                <!--<FlowDocumentScrollViewer Foreground="White"
                                          HorizontalAlignment="Center"
                                          Width="1100"
                                          FontFamily="Times New Roman">

                    <FlowDocument Background="White"
                                  Foreground="Black"
                                  Name="document">
                        <Paragraph FontSize="33"
                                   TextAlignment="Center"
                                   FontWeight="Black">Отчет по региону</Paragraph>
                        <Paragraph FontSize="20"
                                   TextAlignment="Left">за 30.06.2022</Paragraph>
                        <Paragraph FontSize="20"
                                   TextAlignment="Left">
                            <Run Text="Регион: "/>
                            <Run Text="{Binding RegionText, UpdateSourceTrigger=PropertyChanged}"/>
                        </Paragraph>
