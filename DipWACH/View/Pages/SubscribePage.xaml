                    </FlowDocument>

                </FlowDocumentScrollViewer>-->

                <FlowDocumentReader Width="1000"
                                    Height="500"
                                    Name="DocReader"
                                    ViewingMode="Scroll">

                    <FlowDocument Background="White"
                                  Foreground="Black"
                                  Name="document">
                        <Paragraph FontSize="33"
                                   TextAlignment="Center"
                                   FontWeight="Black">Отчет по региону</Paragraph>
                        <Paragraph FontSize="20"
                                   TextAlignment="Left">за 30.06.2022</Paragraph>
                        <Paragraph FontSize="20"
                                   TextAlignment="Left">
                            <Run Text="Регион: "/>
                            <Run Text="{Binding RegionText, UpdateSourceTrigger=PropertyChanged}"/>
                        </Paragraph>
                        <Table FontSize="30">
                            <Table.Columns>
                                <TableColumn Width="1*" />
                                <TableColumn Width="1*" />
                                <TableColumn Width="*" />
                            </Table.Columns>
                            <TableRowGroup FontSize="20">
                                <TableRow FontSize="25"
                                          FontWeight="DemiBold">
                                    <TableCell>
                                        <Paragraph>Сумма по частным домам</Paragraph>
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph>Сумма по квартирам</Paragraph>
                                    </TableCell>
                                </TableRow>
                                <TableRow>
                                    <TableCell>
                                        <Paragraph>
                                            <Run Text="{Binding BuildingSumm}"
                                                 FontFamily="Times New Roman"/>
                                            <Run Text="руб."/>
                                        </Paragraph>
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph>
                                            <Run Text="{Binding ApartmentSumm}"
                                                 FontFamily="Times New Roman"/>
                                            <Run Text="руб."/>
                                        </Paragraph>
                                    </TableCell>
                                </TableRow>
                            </TableRowGroup>
                        </Table>
                        <Paragraph FontSize="25"
                                   TextAlignment="Right"
                                   FontWeight="Black">
                            <Run Text="ИТОГО: "/>
                            <Run Text="{Binding Itog}"
                                 FontFamily="Times New Roman"/>
                            <Run Text="руб."/>
                        </Paragraph>
                    </FlowDocument>

                </FlowDocumentReader>
                

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Grid.Row="1">

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="0 0 25 0">

                        <Button Width="190"
                                Height="40"
                                Margin="0 0 15 0"
                                Command="{Binding AutoCalculate}"
                                CommandParameter="{Binding ElementName=DocReader}">
                            <TextBlock Text="Сохранить в pdf"/>
                        </Button>
                        <Button Width="190"
                                Height="40"
                                Command="{Binding DocClose}">
                            <TextBlock Text="Закрыть"/>
                        </Button>

                    </StackPanel>

                </StackPanel>
                
            </Grid>

        </Grid>

    </Grid>
</Page>
