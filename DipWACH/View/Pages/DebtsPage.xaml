      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DipWACH.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="830" 
      d:DesignWidth="1390"
      Title="DebtsPage">

    <Grid>

        <TextBlock Text="Debts"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="30">
